{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "galleries_galleryimage_name": {
            "defaultValue": "galleryimage",
            "type": "String"
        },
	"imagedefinition": {
	    "defaultValue": "Windows_image_defination_version",
            "type": "String"
	}
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/galleries",
            "apiVersion": "2022-03-03",
            "name": "[parameters('galleries_galleryimage_name')]",
            "location": "UK South",
            "properties": {
                "identifier": {}
            }
        },
        {
            "type": "Microsoft.Compute/galleries/images",
            "apiVersion": "2022-03-03",
            "name": "[concat(parameters('galleries_galleryimage_name'), '/', parameters('imagedefinition'))]",
            "location": "UK South",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/galleries', parameters('galleries_galleryimage_name'))]"
            ],
            "properties": {
                "hyperVGeneration": "V2",
                "architecture": "x64",
                "osType": "Windows",
                "osState": "Generalized",
                "identifier": {
                    "publisher": "MicrosoftWindowsServer",
                    "offer": "windowsserver",
                    "sku": "2016-datacenter-ARM"
                },
                "recommended": {
                    "vCPUs": {
                        "min": 1,
                        "max": 16
                    },
                    "memory": {
                        "min": 1,
                        "max": 32
                    }
                }
            }
        }
    ]
}
